<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="TestMapper">
    <select id="eventLoopTest" resultType="map">
        SELECT 'event_loop_test' as "test_name", CURRENT_TIMESTAMP as "timestamp"
    </select>

    <insert id="loadTestData" parameterType="map">
        INSERT INTO load_test_data (test_key, test_value, created_at)
        VALUES (#{test_key, jdbcType=VARCHAR}, #{test_value, jdbcType=VARCHAR}, CURRENT_TIMESTAMP)
    </insert>

    <select id="metricsTestData" resultType="map">
        SELECT 'metrics_test' as "test_name", 42 as "metric_value", CURRENT_TIMESTAMP as "timestamp"
    </select>

    <select id="virtualThreadTest" resultType="map">
        SELECT 'virtual_thread_test' as "test_name", CURRENT_TIMESTAMP as "timestamp"
    </select>

    <select id="fallbackTestData" resultType="map">
        SELECT 'fallback_test' as "test_name", CURRENT_TIMESTAMP as "timestamp"
    </select>
</mapper>
